{
  "name": "codepeek",
  "displayName": "CodePeek",
  "description": "Make AI your best coding ally by providing it with the exact context it needs",
  "publisher": "SubashMatu",
  "icon": "images/icon.png",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.75.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codepeek.generateContext",
        "title": "CodePeek: Generate Context"
      },
      {
        "command": "codepeek.generateTerminalContext",
        "title": "CodePeek: Generate Terminal Context"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CodePeek Configuration",
      "properties": {
        "codepeek.promptText": {
          "type": "string",
          "default": "",
          "description": "Your terminal prompt text or a unique part of it. The extension will use this text to identify the last command."
        }
      }
    }
  },
  "main": "./extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Subashmatu08/CodePeek"
  },
  "bugs": {
    "url": "https://github.com/Subashmatu08/CodePeek/issues"
  },
  "homepage": "https://github.com/Subashmatu08/CodePeek#readme"
}
